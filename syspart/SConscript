# -*- Mode: Python -*-

Import('env')

syspart_env = env.Clone()

syspart_env['CPPPATH'] = [env['POK_PATH']+'/build/libpok/include',
                          env['POK_PATH']+'/libpok/include',
                          env['POK_PATH']+'/syspart/include',
                          ]

syspart_program = syspart_env.Program(target = 'syspart.lo', source = [
    'net/net.lo',
    'drivers/drivers.lo',
    'config.c',
    'mem.c',
    'uip/uip.lo'
])
syspart_env.Depends(syspart_program, env['POK_PATH']+'/libpok/')

Export('syspart_env')

SConscript('net/SConscript')
SConscript('drivers/SConscript')
SConscript('uip/SConscript')

# EOF
