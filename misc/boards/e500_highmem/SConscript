"""
Environment definitions for e500_highmem board based on PowerPC.
"""

Import('env')

env['ARCH'] = 'ppc'

SConscript(env['JETOS_HOME'] + '/misc/arch/ppc/SConscript', exports = 'env')

env.Append(CFLAGS = ' -mcpu=e500mc')

env['BOARD_PHYS_SIZE'] = 2**28 # 256M

env['BOARD_IS_EMULATED'] = True
env.Append(QEMU_FLAGS = ' -M ppce500 -cpu e500mc')
